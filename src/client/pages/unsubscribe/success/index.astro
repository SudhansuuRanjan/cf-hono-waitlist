---
import Layout from "../../../layouts/Layout.astro";
---

<Layout title="Unsubscribe - Success">
  <div class="hero min-h-screen">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="mb-16 text-3xl font-bold">NanoMark</h1>
        <div class="alert alert-info shadow-lg">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="h-6 w-6 shrink-0 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <div>
            <h3 class="font-bold">Sorry to see you go!</h3>
            <div class="text-xs">You have been successfully unsubscribed.</div>
          </div>
        </div>
        <p class="text-neutral-content py-6">
          We're sorry to see you leave our waitlist. If you change your mind, you can always sign up again.
        </p>
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>
    </div>
  </div>
</Layout>
